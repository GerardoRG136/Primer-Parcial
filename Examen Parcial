def promedio():
  PF1= (75.2 + 73.4 + 69.8)
  PF2= (PF1/3)
  print ("Su promedio de grados Fahrenheit es",(PF2))

promedio()

def converciónIF():
  print("Escribe tu temperatura en grados Fahrenheit")
  x= input()
  CIF= (int(x)-32)*(5/9)
  print ("Tu resultado en grados Celcius", (CIF))

converciónIF()
