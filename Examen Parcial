def temperatura1F():
  print("Escribe tu temperatura en grados Celsius")
  x= input()
  F1= (int(x)*9/5 +32)
  print ("Tu resultado en grados Fahrenheit", (F1))

temperatura1F()

def temperatura1K():
  print("Escribe tu temperatura en grados Celsius")
  x= input()
  K1= (int(x)+273.15)
  print ("Tu resultado en grados Kelvin", (K1))

temperatura1K()

